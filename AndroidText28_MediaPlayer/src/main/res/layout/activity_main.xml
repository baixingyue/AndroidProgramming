<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.androidtext28_mediaplayer.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        android:id="@+id/buttonStart"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAUSE"
        android:id="@+id/buttonPause"
        android:layout_above="@+id/buttonStop"
        android:layout_alignStart="@+id/buttonStop"
        android:layout_marginBottom="28dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STOP"
        android:id="@+id/buttonStop"
        android:layout_marginBottom="43dp"
        android:layout_above="@+id/buttonLoop"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOOP"
        android:id="@+id/buttonLoop"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/buttonStart"
        android:layout_marginBottom="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="所爱隔山海，山海不可平。就算山海不可平，我喜欢你是认真的。可是到底还是隔着山海的。幸福对我这样的人来说注定是不配拥有，还记得你告诉我这首歌的歌名的时候，我有多喜欢，因为这首歌的名字叫I Really Like You，我想对你说I Really Really Like you"
        android:id="@+id/textView2"
        android:layout_above="@+id/buttonStart"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="想说对不起，对不起那个总是委屈的自己，和不会喜欢我的你"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtLoopState"
        android:layout_alignBottom="@+id/buttonStart"
        android:layout_toEndOf="@+id/textView" />
</RelativeLayout>
